<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>gear.ac</path>

  <animation>
    <object-name>manette</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>manette</object-name>
    <repeatable>false</repeatable>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>controls.gearToggle()</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>manette</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -50 </dep></entry>
      <entry><ind> 1 </ind><dep>   0 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
