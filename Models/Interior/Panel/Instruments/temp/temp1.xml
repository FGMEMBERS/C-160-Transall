<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>temp.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/engines/engine[1]/oil-temperature-degf</property>
    <interpolation>
      <entry><ind>   0.00 </ind><dep>  0 </dep></entry> <!--    0 deg C -->
      <entry><ind>  37.78 </ind><dep> 10 </dep></entry> <!--  100 deg C -->
      <entry><ind>  93.33 </ind><dep> 20 </dep></entry> <!--  200 deg C -->
      <entry><ind> 148.89 </ind><dep> 35 </dep></entry> <!--  300 deg C-->
      <entry><ind> 204.44 </ind><dep> 50 </dep></entry> <!--  400 deg C -->
      <entry><ind> 260.00 </ind><dep> 65 </dep></entry> <!--  500 deg C -->
      <entry><ind> 315.56 </ind><dep> 65 </dep></entry> <!--  600 deg C -->
      <entry><ind> 371.11 </ind><dep> 65 </dep></entry> <!--  700 deg C -->
      <entry><ind> 426.67 </ind><dep> 65 </dep></entry> <!--  800 deg C -->
      <entry><ind> 482.22 </ind><dep> 65 </dep></entry> <!--  900 deg C -->
      <entry><ind> 537.78 </ind><dep> 65 </dep></entry> <!-- 1000 deg C -->
    </interpolation>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
