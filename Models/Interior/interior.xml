  <!-- Portes cargo arriere -->
  <animation>
    <type>pick</type>
    <object-name>intbaieH</object-name>
    <object-name>intbaieB</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
