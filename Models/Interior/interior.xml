<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intbaieB</object-name>
    <object-name>intbaieH</object-name>
    <object-name>planchet</object-name>
    <object-name>paroie</object-name>
    <object-name>support</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <!-- HDR mode -->
    <object-name>HDRintvitres</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../Effects/Glass/glassrain</inherits-from>
    <object-name>intvitres</object-name>
  </effect>

  <effect>
    <inherits-from>../Effects/Glass/glass</inherits-from>
    <object-name>HDRintvitres</object-name>
  </effect>

  <!-- SÃ©lection des vitres en fonction de HDR ou pas -->
  <animation>
    <type>select</type>
    <condition>
      <!-- <property>sim/rendering/hdr/hdr-enabled</property> -->
      <property>sim/multiplay/generic/bool[2]</property>
    </condition>
    <object-name>HDRintvitres</object-name>
  </animation>

  <animation>
    <type>select</type>
    <condition>
      <!-- <not><property>sim/rendering/hdr/hdr-enabled</property></not> -->
      <not><property>sim/multiplay/generic/bool[2]</property></not>
    </condition>
    <object-name>intvitres</object-name>
  </animation>

  <model>
    <path>Panel/all-panels.xml</path>
  </model>

  <!-- Plafonnier -->
  <model>
    <path>overhead/all-overheads.xml</path>
  </model>

  <model>
    <path>../Pilot/all-pilots.xml</path>
  </model>

  <model>
    <path>seat/all-seats.xml</path>
  </model>

  <!-- Portes cargo arriere -->
  <animation>
    <type>pick</type>
    <object-name>intbaieH</object-name>
    <object-name>intbaieB</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intbaieB</object-name>
    <!-- <property>sim/model/door-positions/passenger/position-norm</property> -->
    <property>sim/multiplay/generic/float[1]</property>
    <factor> 40 </factor>
    <center>
      <x-m>  2.518 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -4.552 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intbaieH</object-name>
    <!-- <property>sim/model/door-positions/passenger/position-norm</property> -->
    <property>sim/multiplay/generic/float[1]</property>
    <factor> 20 </factor>
    <center>
      <x-m> 10.735 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.775 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
